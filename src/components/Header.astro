---
const currentPath = Astro.url.pathname;
// biome-ignore lint/correctness/noUnusedVariables: Used in template class binding
const isHome = currentPath === "/";
// biome-ignore lint/correctness/noUnusedVariables: Used in template class binding
const isAbout = currentPath === "/about" || currentPath === "/about/";
---

<header class="fixed top-6 left-1/2 -translate-x-1/2 z-40" transition:persist>
	<nav class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-md rounded-full shadow-lg px-6 py-3 flex items-center gap-6">
		<ul class="flex items-center gap-2">
			<li>
				<a
					href="/"
					class={`px-4 py-2 rounded-full font-medium transition-all ${
						isHome
							? "bg-gray-900 dark:bg-white text-white dark:text-gray-900"
							: "text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700"
					}`}
				>
					Home
				</a>
			</li>
			<li>
				<a
					href="/about"
					class={`px-4 py-2 rounded-full font-medium transition-all ${
						isAbout
							? "bg-gray-900 dark:bg-white text-white dark:text-gray-900"
							: "text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700"
					}`}
				>
					About
				</a>
			</li>
		</ul>

		<div class="border-l border-gray-300 dark:border-gray-600 h-6"></div>

		<div>
			<button
			id="theme-toggle"
			class="p-2 rounded-full hover:bg-gray-200/50 dark:hover:bg-gray-700/50 transition-all duration-300"
			aria-label="Toggle theme"
		>
			<svg
				id="theme-toggle-dark-icon"
				class="w-6 h-6 hidden text-gray-900 dark:text-gray-100"
				fill="currentColor"
				viewBox="0 0 20 20"
			>
				<path
					d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
				></path>
			</svg>
			<svg
				id="theme-toggle-light-icon"
				class="w-6 h-6 hidden text-gray-900 dark:text-gray-100"
				fill="currentColor"
				viewBox="0 0 20 20"
			>
				<path
					fill-rule="evenodd"
					d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
					clip-rule="evenodd"></path>
			</svg>
			</button>
		</div>
	</nav>
</header>

<script>
	function initThemeToggle() {
		const themeToggleBtn = document.getElementById("theme-toggle");
		if (!themeToggleBtn) return;

		// Remove existing listener to prevent duplicates
		const newBtn = themeToggleBtn.cloneNode(true) as HTMLElement;
		themeToggleBtn.parentNode?.replaceChild(newBtn, themeToggleBtn);

		// Get icon elements from the NEW button
		const themeToggleDarkIcon = newBtn.querySelector("#theme-toggle-dark-icon");
		const themeToggleLightIcon = newBtn.querySelector("#theme-toggle-light-icon");

		function updateIcons(isDark: boolean) {
			if (themeToggleLightIcon && themeToggleDarkIcon) {
				themeToggleLightIcon.classList.toggle("hidden", isDark);
				themeToggleDarkIcon.classList.toggle("hidden", !isDark);
			}
		}

		// Initial icon state
		const isDark = document.documentElement.classList.contains("dark");
		updateIcons(isDark);

		newBtn.addEventListener("click", () => {
			document.documentElement.classList.toggle("dark");

			const isDarkNow = document.documentElement.classList.contains("dark");
			localStorage.setItem("theme", isDarkNow ? "dark" : "light");
			updateIcons(isDarkNow);
		});
	}

	function updateActiveLink() {
		const currentPath = window.location.pathname;
		const homeLink = document.querySelector('a[href="/"]');
		const aboutLink = document.querySelector('a[href="/about"]');

		const isHome = currentPath === "/";
		const isAbout = currentPath === "/about" || currentPath === "/about/";

		// Update Home link
		if (homeLink) {
			if (isHome) {
				homeLink.className = "px-4 py-2 rounded-full font-medium transition-all bg-gray-900 dark:bg-white text-white dark:text-gray-900";
			} else {
				homeLink.className = "px-4 py-2 rounded-full font-medium transition-all text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700";
			}
		}

		// Update About link
		if (aboutLink) {
			if (isAbout) {
				aboutLink.className = "px-4 py-2 rounded-full font-medium transition-all bg-gray-900 dark:bg-white text-white dark:text-gray-900";
			} else {
				aboutLink.className = "px-4 py-2 rounded-full font-medium transition-all text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700";
			}
		}
	}

	// astro:page-load fires on both initial load and page transitions
	document.addEventListener("astro:page-load", () => {
		initThemeToggle();
		updateActiveLink();
	});
</script>
