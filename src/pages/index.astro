---
import Layout from "../layouts/Layout.astro";
---

<Layout title="malleus">
	<main class="min-h-screen flex flex-col items-center justify-center px-4">
		<div class="text-center">
			<img
				src="https://github.com/malleroid.png"
				alt="malleus"
				class="w-32 h-32 rounded-full mx-auto mb-6 border-4 border-gray-700 dark:border-gray-700 border-gray-300 animate-fade-in hover:scale-110 hover:shadow-2xl hover:shadow-blue-500/50 transition-all duration-300 cursor-pointer"
			/>
			<h1
				class="text-4xl font-bold mb-2 animate-fade-in-up animation-delay-100 text-gray-900 dark:text-gray-100"
			>
				malleus
			</h1>
			<p
				class="text-lg mb-8 animate-fade-in-up animation-delay-200 text-gray-600 dark:text-gray-400"
			>
				Software Engineer
			</p>

			<div
				class="flex justify-center gap-6 animate-fade-in-up animation-delay-300"
			>
				<a
					href="https://github.com/malleroid"
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
					aria-label="GitHub"
				>
					<svg
						class="w-8 h-8"
						fill="currentColor"
						viewBox="0 0 24 24"
						aria-hidden="true"
					>
						<path
							fill-rule="evenodd"
							d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
							clip-rule="evenodd"></path>
					</svg>
				</a>
				<a
					href="https://x.com/malIeus"
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
					aria-label="X"
				>
					<svg
						class="w-8 h-8"
						fill="currentColor"
						viewBox="0 0 24 24"
						aria-hidden="true"
					>
						<path
							d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
						></path>
					</svg>
				</a>
				<a
					href="https://malleroid.hatenablog.com/"
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
					aria-label="Hatena Blog"
				>
					<svg
						class="w-8 h-8"
						fill="currentColor"
						viewBox="0 0 24 24"
						aria-hidden="true"
					>
						<path
							d="M20 3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9.5 15.5c-1.4 0-2.5-1.1-2.5-2.5s1.1-2.5 2.5-2.5 2.5 1.1 2.5 2.5-1.1 2.5-2.5 2.5zm6.5-6h2v6h-2V9.5zm0-3h2v2h-2v-2z"
						></path>
					</svg>
				</a>
			</div>
		</div>
	</main>
</Layout>
