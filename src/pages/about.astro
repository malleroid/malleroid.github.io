---
// biome-ignore lint/correctness/noUnusedImports: Used in template
import Layout from "../layouts/Layout.astro";
---

<Layout title="About - malleus">
	<main class="min-h-screen px-4 py-16 pt-32">
		<div class="max-w-4xl mx-auto">
			<!-- Header -->
			<header class="mb-12 text-center">
				<h1
					class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-gray-100"
				>
					About Me
				</h1>
				<p class="text-lg text-gray-600 dark:text-gray-400">
					Software Engineer
				</p>
			</header>

			<!-- Bio Section -->
			<section class="mb-16">
				<h2
					class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100 border-b-2 border-gray-300 dark:border-gray-700 pb-2"
				>
					Bio
				</h2>
				<div class="prose prose-lg dark:prose-invert max-w-none">
					<p class="text-gray-700 dark:text-gray-300 leading-relaxed">
						I'm a software engineer working on full-stack web development and
						DevOps. My interests include frontend, backend, infrastructure
						automation, and image processing technologies.
					</p>
				</div>
			</section>

			<!-- Skills Section -->
			<section class="mb-16">
				<h2
					class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100 border-b-2 border-gray-300 dark:border-gray-700 pb-2"
				>
					Skills
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<!-- Frontend -->
					<div
						class="p-6 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-300 dark:border-gray-700"
					>
						<h3
							class="text-xl font-semibold mb-3 text-gray-900 dark:text-gray-100"
						>
							Frontend
						</h3>
						<ul class="space-y-2 text-gray-700 dark:text-gray-300">
							<li>React / Next.js</li>
							<li>TypeScript</li>
							<li>Astro / Svelte</li>
						</ul>
					</div>

					<!-- Backend -->
					<div
						class="p-6 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-300 dark:border-gray-700"
					>
						<h3
							class="text-xl font-semibold mb-3 text-gray-900 dark:text-gray-100"
						>
							Backend
						</h3>
						<ul class="space-y-2 text-gray-700 dark:text-gray-300">
							<li>Ruby on Rails</li>
							<li>FastAPI</li>
							<li>Hono</li>
							<li>Laravel</li>
						</ul>
					</div>

					<!-- Infrastructure / DevOps -->
					<div
						class="p-6 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-300 dark:border-gray-700"
					>
						<h3
							class="text-xl font-semibold mb-3 text-gray-900 dark:text-gray-100"
						>
							Infrastructure / DevOps
						</h3>
						<ul class="space-y-2 text-gray-700 dark:text-gray-300">
							<li>AWS</li>
							<li>Docker</li>
							<li>Terraform</li>
							<li>GitHub Actions</li>
						</ul>
					</div>

					<!-- Middleware -->
					<div
						class="p-6 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-300 dark:border-gray-700"
					>
						<h3
							class="text-xl font-semibold mb-3 text-gray-900 dark:text-gray-100"
						>
							Middleware
						</h3>
						<ul class="space-y-2 text-gray-700 dark:text-gray-300">
							<li>PostgreSQL / MySQL</li>
							<li>DynamoDB / Firestore</li>
							<li>Redis</li>
							<li>Elasticsearch</li>
							<li>AWS SQS</li>
						</ul>
					</div>

					<!-- Image Processing -->
					<div
						class="p-6 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-300 dark:border-gray-700"
					>
						<h3
							class="text-xl font-semibold mb-3 text-gray-900 dark:text-gray-100"
						>
							Image Processing
						</h3>
						<ul class="space-y-2 text-gray-700 dark:text-gray-300">
							<li>OpenCV</li>
							<li>Three.js</li>
							<li>SLAM</li>
							<li>Photogrammetry</li>
						</ul>
					</div>

					<!-- Machine Learning -->
					<div
						class="p-6 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-300 dark:border-gray-700"
					>
						<h3
							class="text-xl font-semibold mb-3 text-gray-900 dark:text-gray-100"
						>
							Machine Learning
						</h3>
						<ul class="space-y-2 text-gray-700 dark:text-gray-300">
							<li>PyTorch</li>
							<li>Transformer</li>
							<li>Object Detection</li>
							<li>Person Recognition</li>
							<li>CNN</li>
						</ul>
					</div>
				</div>
			</section>

			<!-- Experience Section -->
			<section class="mb-16">
				<h2
					class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100 border-b-2 border-gray-300 dark:border-gray-700 pb-2"
				>
					Experience
				</h2>
				<div class="space-y-6">
					<!-- Paiza Inc. -->
					<div
						class="p-6 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-300 dark:border-gray-700"
					>
						<h3
							class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100"
						>
							Full-stack Engineer
						</h3>
						<p class="text-sm text-gray-600 dark:text-gray-400 mb-1">
							Paiza Inc.
						</p>
						<p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
							August 2021 - Present
						</p>
						<ul class="list-disc list-inside text-gray-700 dark:text-gray-300 space-y-1">
							<li>Web development and DevOps</li>
							<li>Team Leader</li>
						</ul>
					</div>

					<!-- datagusto inc (Contract) -->
					<div
						class="p-6 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-300 dark:border-gray-700"
					>
						<h3
							class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100"
						>
							Full-stack Engineer (Contract)
						</h3>
						<p class="text-sm text-gray-600 dark:text-gray-400 mb-1">
							datagusto inc.
						</p>
						<p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
							June 2022 - November 2022
						</p>
						<ul class="list-disc list-inside text-gray-700 dark:text-gray-300 space-y-1">
							<li>NoSQL database design</li>
							<li>Large-scale CSR with frontend performance optimization</li>
						</ul>
					</div>

					<!-- ColorChips Inc. -->
					<div
						class="p-6 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-300 dark:border-gray-700"
					>
						<h3
							class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100"
						>
							R&D Engineer
						</h3>
						<p class="text-sm text-gray-600 dark:text-gray-400 mb-1">
							ColorChips Inc.
						</p>
						<p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
							August 2018 - July 2021
						</p>
						<ul class="list-disc list-inside text-gray-700 dark:text-gray-300 space-y-1">
							<li>Image Processing</li>
							<li>Machine Learning</li>
						</ul>
					</div>
				</div>
			</section>
		</div>
	</main>
</Layout>
