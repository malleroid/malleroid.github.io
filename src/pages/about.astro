---
import Layout from "../layouts/Layout.astro";
---

<Layout title="About - malleus">
	<main class="min-h-screen px-4 py-16 pt-24">
		<div class="max-w-4xl mx-auto">
			<!-- Header -->
			<header class="mb-12 text-center">
				<h1
					class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-gray-100"
				>
					About Me
				</h1>
				<p class="text-lg text-gray-600 dark:text-gray-400">
					Software Engineer
				</p>
			</header>

			<!-- Profile Section -->
			<section class="mb-16">
				<h2
					class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100 border-b-2 border-gray-300 dark:border-gray-700 pb-2"
				>
					Profile
				</h2>
				<div class="prose prose-lg dark:prose-invert max-w-none">
					<p class="text-gray-700 dark:text-gray-300">
						<!-- プロフィール内容をここに追加 -->
					</p>
				</div>
			</section>

			<!-- Skills Section -->
			<section class="mb-16">
				<h2
					class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100 border-b-2 border-gray-300 dark:border-gray-700 pb-2"
				>
					Skills
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<!-- スキル項目をここに追加 -->
				</div>
			</section>

			<!-- Experience Section -->
			<section class="mb-16">
				<h2
					class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100 border-b-2 border-gray-300 dark:border-gray-700 pb-2"
				>
					Experience
				</h2>
				<div class="space-y-8">
					<!-- 経験項目をここに追加 -->
				</div>
			</section>
		</div>
	</main>
</Layout>
